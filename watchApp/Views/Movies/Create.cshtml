@model watchApp.ViewModels.MovieViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Movie</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Movie.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Movie.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Movie.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Movie.Year, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Movie.Year, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Movie.Year, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Movie.Watched, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Movie.Watched)
                    @Html.ValidationMessageFor(model => model.Movie.Watched, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Movie.Genre, "Genre", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model=> model.Movie.Genre,(SelectList)ViewBag.Genre,String.Empty,htmlAttributes:new { @class = "form-control" })                @*@@Html.DropDownList("Genre", null,string.Empty, htmlAttributes: new { @class = "form-control" })*@
                @Html.ValidationMessageFor(model => model.Movie.Genre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Movie.DirectorId, null, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <!-- anti gia "" bazoyme string.empty gia keno -->
                @Html.DropDownListFor(model=> model.Movie.DirectorId,(SelectList)ViewBag.DirectorId,string.Empty, htmlAttributes: new { @class = "form-control" })
                @*@@Html.DropDownList("DirectorId", null,string.Empty, htmlAttributes: new { @class = "form-control" })*@
                @Html.ValidationMessageFor(model => model.Movie.DirectorId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model=> model.Movie.Actors,null , htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10 ">
                @Html.ListBoxFor(model=>model.SelectedActors,Model.Actors)

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

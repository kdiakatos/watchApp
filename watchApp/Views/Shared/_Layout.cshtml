<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WtchApp</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        @Html.ActionLink("WatchApp", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Movies", "Index", "Movies", null, new { @class = "nav-link", id = "first-link" })

                </li>
                <li class="nav-item">
                    @Html.ActionLink("Actors", "Index", "Actors", null, new { @class = "nav-link", id = "second-link" })

                </li>
                <li class="nav-item">
                    @Html.ActionLink("Directors", "Index", "Directors", null, new { @class = "nav-link", id = "third-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Categories", "Index", "Categories", null, new { @class = "nav-link", id = "forth-link" })
                </li>

            </ul>
            <!--//found on bootstrapv-->
            <button type="button" class="btn btn-primary">
                Actions <span class="badge badge-light">@Session["Actions"]</span>
            </button>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @RenderSection("newsection",required:false)

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
